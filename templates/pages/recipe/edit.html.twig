{% extends "base.html.twig" %}

{% block body %}
	<div class="container mt-4 mb-5">
		<div class="row justify-content-center">
			<div class="col-lg-8">
				<div class="form-card">
					<div class="form-header">
						<div class="form-icon">‚úèÔ∏è</div>
						<h2 class="form-title">Modification de la recette</h2>
						<p class="form-subtitle">Peaufinez votre cr√©ation culinaire</p>
					</div>

					{{ form_start(form, {'attr': {'class': 'custom-form'}}) }}

					<div class="row">
						<div class="col-md-8 mb-4">
							<label class="form-label">Nom de la recette</label>
							{{ form_widget(form.name, {'attr': {'class': 'form-control form-input', 'placeholder': 'Ex: Tarte aux pommes'}}) }}
							{{ form_errors(form.name) }}
						</div>

						<div class="col-md-4 mb-4">
							<label class="form-label">‚è±Ô∏è Temps (min)</label>
							{{ form_widget(form.time, {'attr': {'class': 'form-control form-input', 'placeholder': '30'}}) }}
							{{ form_errors(form.time) }}
						</div>
					</div>

					<div class="row">
						<div class="col-md-4 mb-4">
							<label class="form-label">üë• Personnes</label>
							{{ form_widget(form.nbPeople, {'attr': {'class': 'form-control form-input', 'placeholder': '4'}}) }}
							{{ form_errors(form.nbPeople) }}
						</div>

						<div class="col-md-4 mb-4">
							<label class="form-label">‚≠ê Difficult√©</label>
							{{ form_widget(form.difficulty, {'attr': {'class': 'form-control form-input'}}) }}
							{{ form_errors(form.difficulty) }}
						</div>

						<div class="col-md-4 mb-4">
							<label class="form-label"></label>
							{{ form_widget(form.price, {'attr': {'class': 'form-control form-input', 'placeholder': '15.00'}}) }}
							{{ form_errors(form.price) }}
						</div>
					</div>

					<div class="mb-4">
						<label class="form-label">üìù Description</label>
						{{ form_widget(form.description, {'attr': {'class': 'form-control form-input form-textarea', 'rows': '5', 'placeholder': 'D√©crivez votre recette...'}}) }}
						{{ form_errors(form.description) }}
					</div>

					<div class="mb-4">
						<label class="form-label">Ingr√©dients</label>
						{{ form_widget(form.ingredients, {'attr': {'class': 'form-control form-select'}}) }}
						{{ form_errors(form.ingredients) }}
					</div>

					<div class="form-options mb-4">
						<div class="form-check-custom">
							{{ form_widget(form.isFavorite, {'attr': {'class': 'form-check-input'}}) }}
							<label class="form-check-label">‚≠ê Recette favorite</label>
						</div>
						<div class="form-check-custom">
							{{ form_widget(form.isPublic, {'attr': {'class': 'form-check-input'}}) }}
							<label class="form-check-label">üåç Partager avec la communaut√©</label>
						</div>
					</div>

					<div class="mb-4">
						<label class="form-label">üì∏ Photo de la recette (Facultatif)</label>
						{{ form_widget(form.photo, {'attr': {'class': 'form-control form-input'}}) }}
						{{ form_errors(form.photo) }}
					</div>

					{{ form_row(form._token) }}

					<div class="form-actions">
						<a href="{{ path('app_recipe') }}" class="btn btn-cancel">Annuler</a>
						{{ form_widget(form.submit, {'attr': {'class': 'btn btn-submit'}, 'label': '‚úì Enregistrer les modifications'}) }}
					</div>

					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
