{% extends 'base.html.twig' %}

{% block title %}HelloRecettes - Mes recettes
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not recipes.items is same as([]) %}
			<h1 class="mt-4">Recettes de la communauté</h1>

			<div class="row mt-4">
				{% for recipe in recipes %}
					<div class="col-md-4 mb-4">
						<div class="card border-primary h-100">
							<div class="card-header">Recette n°{{ recipe.id }}</div>
							<div class="card-body d-flex flex-column">
								<h4 class="card-title">{{ recipe.name }}</h4>
								<div class="text-center my-3">
									{% if recipe.image %}
										<img class="img-fluid" style="object-fit: cover; width: 100px; height: 100px;" src="{{ asset('../image/products/'~ recipe.image) }}" alt="Photo de la recette"/>
									{% else %}
										<img class="img-fluid" style="object-fit: cover; width: 100px; height: 100px;" src="{{ asset('../image/products/replace.jpg') }}" alt="Photo par défaut de la recette"/>
									{% endif %}
								</div>
								<p class="card-text flex-grow-1">{{ recipe.description|slice(0, 100) ~ '...' }}</p>
								<a href="{{ path('recipe.show', { id: recipe.id }) }}" class="btn btn-outline-warning mt-auto">
									Découvrir
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<h4>Il n'y a pas de recettes</h4>
		{% endif %}
	</div>
{% endblock %}
