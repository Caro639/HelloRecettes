					{% endif %}

					<form action="{{ path('app_security') }}" method="post" name="login" class="login-form">
						<div class="form-group mb-4">
							<label for="username" class="form-label">ğŸ“§ Adresse email</label>
							<input type="email" class="form-control login-input" id="username" name="_username" placeholder="exemple@hellorecettes.fr" value="{{ last_username }}" required>
						</div>
						<div class="form-group mb-4">
							<label for="password" class="form-label">ğŸ”‘ Mot de passe</label>
							<input type="password" class="form-control login-input" id="password" name="_password" placeholder="Votre mot de passe" required>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						</div>
						<button type="submit" class="btn btn-login w-100">Se connecter</button>
					</form>

					<div class="login-footer">
						<p class="text-center mb-0">
							Pas encore de compte ?
							<a href="{{ path('app_security.registration') }}" class="login-link">Inscrivez-vous</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
